// Equals
#equals.block-area
	h3.block-title Equals
	form.form-validation-3(role="form")
		.row
			.form-group.col-md-6
				label Password
				input#password.input-sm.validate[required].form-control(type="password", name="password", placeholder="...")
			.form-group.m-b-15.col-md-6
				label Confirm Password
				input.input-sm.validate[required,equals[password]].form-control(type="password", placeholder="...")
		input.btn.btn-sm(type="submit", value="VALIDATE")
		button.btn.btn-sm.validation-clear CLOSE PROMPTS
