// Login
form#box-login.box.tile.animated.active
	h2.m-t-0.m-b-15 Login
	
	input.login-control.m-b-10(type="text", placeholder="Username or Email Address")
	
	input.login-control(type="password", placeholder="Password")
	
	.checkbox.m-b-20
		label
			input(type="checkbox")
			| Remember Me
	
	button.btn.btn-sm.m-r-5 Sign In
	
	small
		a.box-switcher(data-switch="box-register", href="#") Don"t have an Account?
		| or
		a.box-switcher(data-switch="box-reset", href="#") Forgot Password?
